@{
    Layout = null;
}


<div class="modal fade" id="message" tabindex="-1" role="dialog">

    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">
                    Information <small class="small text-muted"> Received</small>
                </h3>
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="alert alert-light">
                    <p>
                        You message has successfully received, our administrator 
                        will review and respond to it ASAP.
                    </p>
                    <p>
                        Regards
                    </p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" data-save="modal-message" class="btn btn-primary">
                    <i class="fa fa-close"></i>
                    Close
                </button>
            </div>
        </div>
    </div>
</div>
