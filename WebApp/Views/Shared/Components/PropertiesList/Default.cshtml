@model IEnumerable<Property>
@{
    Layout = null;
}

@if (Model.Any())
{
    foreach (var item in Model)
    {
        var imgSrc = "";
        if (item.Photo != null)
        {
            var base64 = Convert.ToBase64String(item.Photo);
            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
        }
        <div class="py-5 px-4 border rounded-lg shadow-hover-1 bg-white mb-4 fadeInUp animated"
             data-animate="fadeInUp">
            <div class="media flex-column flex-sm-row no-gutters">
                <div class="col-sm-3 mr-sm-5 card border-0 hover-change-image bg-hover-overlay mb-sm-5">
                    <img src="@imgSrc" class="card-img" alt="@item.Title" />


                </div>
                <div class="media-body mt-3 mt-sm-0">

                    <div class="d-flex justify-content-between">

                        <div>
                            <h2 class="my-0">
                                <a href="#" class="fs-16 lh-2 text-dark hover-primary d-block">
                                    @item.Title
                                </a>
                            </h2>

                        </div>
                        @if (item.IsSold)
                        {
                            <a href="#"
                               class="btn btn-warning my-0"
                               data-toggle="tooltip" title="Sold Out">
                                Sold Out
                            </a>
                        }
                        else
                        {
                            <a href="#"
                               data-id="@item.PropertyId"
                               class="btn btn-primary btn-offer my-0"
                               data-toggle="tooltip" title="Make Offer">
                                Make Offer
                            </a>
                        }
                    </div>

                    <p class="mb-1 font-weight-500 text-gray-light">
                        @item.Address
                    </p>
                    <p class="fs-17 font-weight-bold text-heading mb-1">
                        PKR @item.Price.ToString("N")
                    </p>
                    <p class="mb-2 ml-0">
                        @item.Description
                    </p>

                    <p class="small d-flex justify-content-between border-top border-bottom">
                        <span>
                            (+92) 300 5155517
                        </span>
                        <span>
                            saqlain@propertypointbuilders.com
                        </span>
                    </p>
                </div>
            </div>
            <div class="d-sm-flex justify-content-sm-between">
                <ul class="list-inline d-flex mb-0 flex-wrap">
                    <li class="list-inline-item text-gray font-weight-500 fs-13 d-flex align-items-center mr-5" data-toggle="tooltip" title="" data-original-title="3 Bedroom">
                        <svg class="icon icon-bedroom fs-18 text-primary mr-1">
                            <use xlink:href="#icon-bedroom"></use>
                        </svg>
                        @item.BedRooms Beds
                    </li>
                    <li class="list-inline-item text-gray font-weight-500 fs-13 d-flex align-items-center mr-5" data-toggle="tooltip" title="" data-original-title="3 Bathrooms">
                        <svg class="icon icon-shower fs-18 text-primary mr-1">
                            <use xlink:href="#icon-shower"></use>
                        </svg>
                        @item.BathRooms Baths
                    </li>
                    <li class="list-inline-item text-gray font-weight-500 fs-13 d-flex align-items-center mr-5" data-toggle="tooltip" title="" data-original-title="Size">
                        <svg class="icon icon-square fs-18 text-primary mr-1">
                            <use xlink:href="#icon-square"></use>
                        </svg>
                        @item.LandArea @item.AreaUnit.Name
                    </li>
                    <li class="list-inline-item text-gray font-weight-500 fs-13 d-flex align-items-center mr-5" data-toggle="tooltip" title="" data-original-title="1 Garage">
                        <svg class="icon icon-Garage fs-18 text-primary mr-1">
                            <use xlink:href="#icon-Garage"></use>
                        </svg>
                        @item.Floors Floors
                    </li>
                    <li class="list-inline-item text-gray font-weight-500 fs-13 d-flex align-items-center mr-5" data-toggle="tooltip" title="" data-original-title="Year">
                        <svg class="icon icon-year fs-18 text-primary mr-1">
                            <use xlink:href="#icon-year"></use>
                        </svg>
                        @item.Created.ToString("dd MMM yyyy")
                    </li>
                </ul>


                <span class="badge badge-primary mr-xl-2 mt-3 mt-sm-0">
                    @item.Purpose.Name
                </span>

            </div>
        </div>
    }
}
else
{
    <div class="alert alert-primary" role="alert">
        No data found!
    </div>
}