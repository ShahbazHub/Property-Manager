@model ChangePasswordViewModel 
@{
    ViewData["Title"] = "Change Password";
}


<section class="py-13" data-animated-id="1">
    <div class="container">
        <div class="row login-register">
            <div class="col-lg-6 offset-3">
                <div class="card border-0 shadow-xxs-2 mb-6">
                    <div class="card-body px-8 py-6">
                        <h2 class="card-title fs-30 font-weight-600 text-dark lh-16 mb-2">
                            Change Password
                        </h2>
                        <form class="form" method="post" 
                              asp-area="" asp-controller="Auth" asp-action="ChangePassword">

                            @Html.AntiForgeryToken()
                            <div class="form-group mb-4">
                                <label asp-for="Password">New Password</label>
                                <input type="password" class="form-control form-control-lg border-0" asp-for="Password" placeholder="New Password">
                            </div>
                            <div class="form-group mb-4">
                                <label asp-for="ConfirmPassword">Confirm Password</label>
                                <input type="password" class="form-control form-control-lg border-0" asp-for="ConfirmPassword" placeholder="Confirm New Password">
                            </div>

                            <button type="submit" class="btn btn-primary btn-lg btn-block rounded">Submit</button>
                            <a href="/" class="btn btn-accent btn-lg btn-block rounded">Cancel</a>
                        </form>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>


@section Scripts{
    <script>
    </script>
}