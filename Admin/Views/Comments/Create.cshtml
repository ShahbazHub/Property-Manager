@model CommentCreateViewModel
@{
    Layout = null;
}

<div class="modal fade" data-backdrop="static" id="comment-create" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">
                    Comment <small class="text-muted">Creation</small>
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-area="" asp-controller="Comments" asp-action="Create"
                  method="post" id="FrmCreate">
                <div class="modal-body p-4 py-sm-7 px-sm-8">


                    @Html.AntiForgeryToken()
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <input type="hidden" asp-for="BlogId" />

                    <div class="form-group mb-4">
                        <label asp-for="Name" class="sr-only- font-weight-bold">Name</label>
                        <div class="input-group input-group-lg">
                            <input type="text" class="form-control border-0 shadow-none fs-13"
                                   asp-for="Name"
                                   placeholder="Name">
                        </div>
                        <span asp-validation-for="Name" class="text-danger small"></span>

                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="sr-only- font-weight-bold">Email</label>
                        <div class="input-group input-group-lg">
                            <input type="email" class="form-control border-0 shadow-none fs-13"
                                   asp-for="Email"
                                   placeholder="Email">
                        </div>
                        <span asp-validation-for="Email" class="text-danger small"></span>

                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Message" class="sr-only- font-weight-bold">Message</label>
                        <div class="input-group input-group-lg">
                            <textarea class="form-control border-0 shadow-none fs-13"
                                      asp-for="Message"
                                      placeholder="Message" rows="3"></textarea>
                        </div>
                        <span asp-validation-for="Message" class="text-danger small"></span>

                    </div>

                    <div class="d-flex mb-4">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" asp-for="IsActive">
                            <label class="form-check-label" asp-for="IsActive">
                                Mark as active comment, open to public.
                            </label>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary btn-lg" data-save="modal">Save Changes</button>
                    <button type="button" class="btn btn-accent btn-lg"
                            data-dismiss="modal">
                        Cancel
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>


<script>
    $.validator.unobtrusive.parse('#FrmCreate');
</script>